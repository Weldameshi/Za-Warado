<Window x:Class="ZaWarado.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZaWarado"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <Label Content="The Card Building Game" Margin="0,-100,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Start Game" Margin="0,-50,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="Start_Click"/>
        <Button Content="Exit App" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="Exit_Click"/>
    </Grid>
</Window>
